@page
@model casus_ouderenzorg.Pages.CaregiverTasksOverviewModel
@{
    ViewData["Title"] = "Caregiver Tasks Overview";
}
<div class="container mt-4">
    <h1 class="mb-4">Tasks for Caregiver ID @Model.HardcodedCaregiverId</h1>
    @if (Model.Tasks != null && Model.Tasks.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Location</th>
                    <th>Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var task in Model.Tasks)
                {
                    <tr>
                        <td>@task.Date.ToString("yyyy-MM-dd")</td>
                        <td>@task.StartTime.ToString(@"hh\:mm") - @task.EndTime.ToString(@"hh\:mm")</td>
                        <td>@task.Location</td>
                        <td>@task.Description</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No tasks found for this caregiver.
        </div>
    }
</div>
