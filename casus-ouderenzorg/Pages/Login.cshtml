@page
@model casus_ouderenzorg.Pages.LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}

<head>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
    <div class="text-center" style="max-width: 400px; width: 100%;">
        <!-- Logo or brand name -->
        <img src="/Images/logotext.png" alt="tech4care" style="max-width: 350px;" />
        <p>Please enter your Login and your Password</p>

        <!-- Display any login error messages -->
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger">@Model.ErrorMessage</div>
        }

        <form method="post">
            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-person"></i> <!-- Bootstrap Icons, optional -->
                    </span>
                    <input asp-for="Username" class="form-control" placeholder="Username or Email" />
                </div>
            </div>

            <div class="mb-3">
                <div class="input-group">
                    <span class="input-group-text">
                        <i class="bi bi-lock"></i>
                    </span>
                    <input asp-for="Password" class="form-control" placeholder="Password" type="password" />
                </div>
            </div>

            <div class="d-flex justify-content-between">
                <div></div> <!-- spacer -->
                <a href="#" class="link-secondary">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary mt-3 w-100">Login</button>
        </form>
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
    </div>
</div>
