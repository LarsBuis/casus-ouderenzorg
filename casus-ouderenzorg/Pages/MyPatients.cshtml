@page
@model casus_ouderenzorg.Pages.MyPatientsModel
@{
    ViewData["Title"] = "My Patients";
}
<div class="container mt-4">
    <h1>My Patients (Caregiver ID: 1)</h1>
    @if (Model.Patients != null && Model.Patients.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model.Patients)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No patients have been assigned.
        </div>
    }
</div>
