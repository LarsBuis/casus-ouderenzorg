@page
@model casus_ouderenzorg.Pages.MyPatientsModel
@{
    ViewData["Title"] = "My Patients";
}
<div class="container mt-4">
    <h1 class="mb-4">My Patients (Caregiver ID: 1)</h1>
    @if (Model.Patients != null && Model.Patients.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Patient ID</th>
                    <th>Name</th>
                    <th>Background Info</th>
                    <th>Date of Birth</th>
                    <th>More Info</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in Model.Patients)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.Name</td>
                        <td>@patient.BackgroundInfo</td>
                        <td>@(patient.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")</td>
                        <td>
                            <a class="btn btn-info btn-sm" href="/PatientDetails/@patient.Id">More Info</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No patients have been assigned.
        </div>
    }
</div>
