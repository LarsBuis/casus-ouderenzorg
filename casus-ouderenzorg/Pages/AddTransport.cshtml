@page
@model casus_ouderenzorg.Pages.AddTransportModel
@{
    ViewData["Title"] = "Add Planned Transport";
}

<div class="container mt-4">
    <h1 class="mb-4">Add Planned Transport</h1>
    <form method="post">
        <div class="form-group">
            <label asp-for="PlannedTransport.RitNumber"></label>
            <input asp-for="PlannedTransport.RitNumber" class="form-control" />
            <span asp-validation-for="PlannedTransport.RitNumber" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PlannedTransport.DepartureTime"></label>
            <input asp-for="PlannedTransport.DepartureTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="PlannedTransport.DepartureTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PlannedTransport.DepartureAddress"></label>
            <input asp-for="PlannedTransport.DepartureAddress" class="form-control" />
            <span asp-validation-for="PlannedTransport.DepartureAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PlannedTransport.ArrivalTime"></label>
            <input asp-for="PlannedTransport.ArrivalTime" type="datetime-local" class="form-control" />
            <span asp-validation-for="PlannedTransport.ArrivalTime" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="PlannedTransport.ArrivalAddress"></label>
            <input asp-for="PlannedTransport.ArrivalAddress" class="form-control" />
            <span asp-validation-for="PlannedTransport.ArrivalAddress" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Driver:</label>
            <select asp-for="SelectedDriverId" asp-items="Model.DriverSelectList" class="form-control">
                <option value="">-- Select a Driver --</option>
            </select>
        </div>
        <div class="form-group">
            <label>Vehicle:</label>
            <select asp-for="SelectedVehicleId" asp-items="Model.VehicleSelectList" class="form-control">
                <option value="">Select a Vehicle</option>
            </select>
        </div>
        <div class="form-group">
            <label>Caregiver:</label>
            <select asp-for="SelectedCaregiverId" asp-items="Model.CaregiverSelectList" class="form-control">
                <option value="">Select a Caregiver</option>
            </select>
        </div>
        <div class="form-group">
            <label>Passengers (Select Patients – max allowed is vehicle capacity minus one):</label>
            <div>
                @foreach (var patient in Model.PatientSelectList)
                {
                    <div class="form-check">
                        <input type="checkbox"
                               class="form-check-input"
                               id="patient_@patient.Value"
                               name="SelectedPatientIds"
                               value="@patient.Value"
                        @(Model.SelectedPatientIds != null && Model.SelectedPatientIds.Contains(Convert.ToInt32(patient.Value)) ? "checked" : "") />
                        <label class="form-check-label" for="patient_@patient.Value">
                            @patient.Text
                        </label>
                    </div>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary mt-3">Add Transport</button>
    </form>
</div>
