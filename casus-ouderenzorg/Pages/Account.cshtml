@page
@model AccountModel
@{
    ViewData["Title"] = "Mijn account";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Tech4Care</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        /* Increase padding inside each card body */
        .card .card-body {
            padding: 2rem; /* Adjust the value as needed */
        }
        /* Optionally add extra padding/margin around the card itself */
        .card {
            margin-bottom: 1.5rem;
        }
    </style>
</head>
<body>
    <!-- Main Content -->
    <div class="container my-5">
        <!-- User Information Row -->
        <div class="row align-items-center">
            <!-- Profile Image (Placeholder) -->
            <div class="col-auto">
                <img src="/Images/pf.png"
                     class="rounded-circle border"
                     alt="User photo"
                     style="width:80px; height:80px; object-fit:cover;" />
            </div>
            <!-- User Name -->
            <div class="col-auto">
                <h2 class="fw-bold mb-0">Tom van der meulen</h2>
            </div>
            <!-- Logout Button -->
            <div class="col text-end">
                <a href="#" class="btn btn-danger">Uitloggen</a>
            </div>
        </div>

        <!-- Cards Section -->
        <div class="mt-4">
            <!-- Agenda Card -->
            <a href="/agenda" class="text-decoration-none">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <img src="/Images/dashboard/book.png" alt="Agenda Icon" style="height:24px; margin-right:10px;" />
                        <h5 class="card-title d-inline">Agenda</h5>
                    </div>
                </div>
            </a>
            <!-- Patiënten Card -->
            <a href="/mypatients" class="text-decoration-none">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <img src="/Images/dashboard/users.png" alt="Patients Icon" style="height:24px; margin-right:10px;" />
                        <h5 class="card-title d-inline">Patiënten</h5>
                    </div>
                </div>
            </a>
            <!-- Vervoer Card -->
            <a href="/transport" class="text-decoration-none">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <img src="/Images/dashboard/carbus.png" alt="Transport Icon" style="height:24px; margin-right:10px;" />
                        <h5 class="card-title d-inline">Vervoer</h5>
                    </div>
                </div>
            </a>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
