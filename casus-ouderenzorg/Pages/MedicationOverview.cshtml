@page
@model casus_ouderenzorg.Pages.MedicationOverviewModel
@{
    ViewData["Title"] = "Medication Overview";
}
<div class="container mt-4">
    <h1 class="mb-4">Medication for @Model.PatientName</h1>
    @if (Model.Orders != null && Model.Orders.Count > 0)
    {
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Order Date</th>
                    <th>Status</th>
                    <th>Pharmacy</th>
                    <th>Medication Details</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model.Orders)
                {
                    <tr>
                        <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                        <td>@order.Status</td>
                        <td>@order.Pharmacy.Name</td>
                        <td>
                            @if (order.OrderLines != null && order.OrderLines.Count > 0)
                            {
                                <ul>
                                    @foreach (var line in order.OrderLines)
                                    {
                                        <li>
                                            @line.Medication.Name (<em>@line.Dosage</em>, @line.Frequency, for @line.TreatmentDuration)
                                        </li>
                                    }
                                </ul>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="alert alert-info">
            No medication orders found for this patient.
        </div>
    }
    <div class="d-flex justify-content-between mt-3">
        <a class="btn btn-secondary" href="/PatientDetails/@Model.PatientId">Back to Patient Details</a>
        <a class="btn btn-primary" href="/AddMedicationOrder?patientId=@Model.PatientId">Add New Medication Order</a>
    </div>
</div>
