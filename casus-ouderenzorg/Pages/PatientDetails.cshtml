@page "{id:int}"
@model casus_ouderenzorg.Pages.Patients.DetailsModel
@{
    Layout = "_Layout";
}
<h2>@Model.Patient.Name</h2>
<p><strong>Date of Birth:</strong> @(Model.Patient.DateOfBirth.HasValue ? Model.Patient.DateOfBirth.Value.ToString("dd MMM yyyy") : "—")</p>
<p><strong>Location:</strong> @Model.Patient.Location?.Name</p>
<h3>Background Info</h3>
<p>@Model.Patient.BackgroundInfo</p>

<p>
    <a href="/Orders/@Model.Patient.PatientID" class="btn btn-primary">
        View Medication Orders
    </a>
</p>
