@page "{id:int}"
@model casus_ouderenzorg.Pages.PatientDetailsModel
@{
    ViewData["Title"] = "Patient Details";
}
<div class="container mt-4">
    <h1 class="mb-4">Patient Details</h1>
    @if (Model.Patient != null)
    {
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">@Model.Patient.Name</h5>
                <p class="card-text">
                    <strong>Background Info:</strong> @Model.Patient.BackgroundInfo
                </p>
                <p class="card-text">
                    <strong>Traits:</strong> @Model.Patient.Traits
                </p>
                <p class="card-text">
                    <strong>Date of Birth:</strong> @(Model.Patient.DateOfBirth?.ToString("yyyy-MM-dd") ?? "N/A")
                </p>
                <p class="card-text">
                    <strong>Address:</strong> @Model.Patient.Address
                </p>
                @if (Model.Patient.ContactPerson != null)
                {
                    <p class="card-text">
                        <strong>Contact Person:</strong> @Model.Patient.ContactPerson.Name (<a href="mailto:@Model.Patient.ContactPerson.Email">@Model.Patient.ContactPerson.Email</a>,
                        @Model.Patient.ContactPerson.PhoneNumber)
                    </p>
                }
                else
                {
                    <p class="card-text"><strong>Contact Person:</strong> Not assigned</p>
                }
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning">
            Patient not found.
        </div>
    }
    <a class="btn btn-secondary mt-3" href="/MyPatients">Back to My Patients</a>
</div>
