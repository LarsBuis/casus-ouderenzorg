@page
@model casus_ouderenzorg.Pages.TransportModel
@{
    ViewData["Title"] = "Planned Transports";
}

<h1 class="mb-4">Planned Transports</h1>

<div class="mb-3">
    <a class="btn btn-primary" href="/AddTransport">Add New Transport</a>
</div>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Rit #</th>
            <th>Departure Time</th>
            <th>Departure Address</th>
            <th>Arrival Time</th>
            <th>Arrival Address</th>
            <th>Vehicle</th>
            <th>Driver</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transport in Model.PlannedTransports)
        {
            <tr>
                <td>@transport.RitNumber</td>
                <td>@transport.DepartureTime.ToString("HH:mm")</td>
                <td>@transport.DepartureAddress</td>
                <td>@transport.ArrivalTime.ToString("HH:mm")</td>
                <td>@transport.ArrivalAddress</td>
                <td>@transport.Vehicle</td>
                <td>@transport.Driver</td>
                <td>
                    <a class="btn btn-link" href="/TransportDetails?id=@transport.TransportId">View Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
