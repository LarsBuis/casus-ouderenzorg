@page
@model casus_ouderenzorg.Pages.Agenda.IndexModel
@{
    Layout = "_Layout";
}
<h2>Agenda voor @Model.DisplayDate</h2>
<form method="get" class="form-inline mb-3">
    <label for="datePicker" class="mr-2">Select Date:</label>
    <input type="date" id="datePicker" name="Date" value="@Model.SelectedDate" class="form-control mr-2" />
    <button type="submit" class="btn btn-primary mt-3" style="background-color: #3A4C51; border-color: #3A4C51; color: white;">Go</button>
</form>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Tijd</th>
            <th>Taak</th>
            <th>Descriptie</th>
            <th>Patiënt</th>
            <th>Locatie</th>
            <th>Status</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var task in Model.Tasks)
    {
        <tr>
            <td>@task.StartTime.ToString(@"hh\:mm") - @task.EndTime.ToString(@"hh\:mm")</td>
            <td>@task.TaskName</td>
            <td>@task.Description</td>
            <td>@task.Patient?.Name</td>
            <td>@task.Location?.Name</td>
            <td>
                @if (task.IsCompleted)
                {
                    <span class="btn btn-success">Voldaan</span>
                }
                else
                {
                    <span class="btn btn-warning">Pending</span>
                }
            </td>
        </tr>
    }
    </tbody>
</table>
