@page
@model casus_ouderenzorg.Pages.AgendaModel
@{
    ViewData["Title"] = "Caregiver Tasks Overview";
}
<div class="container mt-4">
    <h1 class="mb-4">Agenda van Tom</h1>
    <form method="post">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Time</th>
                    <th>Location</th>
                    <th>Description</th>
                    <th>Completed</th>
                </tr>
            </thead>
            <tbody>
                @for (int i = 0; i < Model.Tasks.Count; i++)
                {
                    <tr>
                        <td>@Model.Tasks[i].Date.ToString("yyyy-MM-dd")</td>
                        <td>@Model.Tasks[i].StartTime.ToString(@"hh\:mm") - @Model.Tasks[i].EndTime.ToString(@"hh\:mm")</td>
                        <td>@Model.Tasks[i].Location</td>
                        <td>@Model.Tasks[i].Description</td>
                        <td>
                            <input type="checkbox" name="CompletedTaskIds" value="@Model.Tasks[i].Id" @(Model.Tasks[i].IsCompleted ? "checked" : "") />
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <button type="submit" class="btn btn-primary">Save Changes</button>
    </form>
</div>
